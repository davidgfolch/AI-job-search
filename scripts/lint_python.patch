+name: Static Analysis
+
+on: [push, pull_request]
+
+jobs:
+  static-analysis:
+    runs-on: ubuntu-latest
+    steps:
+      - uses: actions/checkout@v4
+
+      - name: Set up Python
+        uses: actions/setup-python@v5
+        with:
+          python-version: '3.10'
+
+      - name: Set up Node.js
+        uses: actions/setup-node@v4
+        with:
+          node-version: '20'
+
+      - name: Install Poetry
+        run: pip install poetry
+
+      - name: Install uv
+        run: pip install uv
+
+      - name: Install dependencies (Root)
+        run: poetry install
+
+      - name: Install dependencies (Web)
+        run: |
+          cd apps/web
+          npm install
+
+      - name: Install dependencies (Backend)
+        run: |
+          cd apps/backend
+          uv sync
+
+      - name: Install dependencies (Commonlib)
+        run: |
+          cd apps/commonlib
+          poetry install
+
+      - name: Install dependencies (Scrapper)
+        run: |
+          cd apps/scrapper
+          poetry install
+
+      - name: Install dependencies (aiEnrich)
+        if: hashFiles('apps/aiEnrich/uv.lock') != ''
+        run: |
+          cd apps/aiEnrich
+          uv sync
+
+      - name: Install dependencies (aiEnrichNew)
+        if: hashFiles('apps/aiEnrichNew/uv.lock') != ''
+        run: |
+          cd apps/aiEnrichNew
+          uv sync
+
+      - name: Run Static Analysis
+        run: |
+          chmod +x ./scripts/test.sh
+          ./scripts/test.sh --lint
